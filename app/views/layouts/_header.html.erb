<% if user_signed_in? %>
  <header class="header-bar">
    <!-- Contenedor para el icono de la flecha hacia atrás y el botón de cerrar sesión -->
    <div class="header-top">
      <!-- Icono de flecha hacia atrás -->
      <%= link_to :back, class: "back-icon2" do %>
        <%= image_tag('back-icon.svg', alt: 'Back') %>
      <% end %>

      <!-- Botón de cerrar sesión -->
      <%= button_to 'Log Out', destroy_user_session_path, method: :delete, class: "log-out-button" %>
    </div>

    <!-- Enlaces de navegación centralizados -->
    <div class="navigation-links">
      <%= link_to 'Dashboard', dashboard_path, class: "nav-link" %>
      <%= link_to 'Categories', groups_path, class: "nav-link" %>
      <%= link_to 'Transactions', financial_transactions_path, class: "nav-link" %>
      <%= link_to 'Account', edit_user_registration_path, class: "nav-link" %>
    </div>
  </header>
<% end %>
